<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_default"
    android:layout_marginBottom="@dimen/margin_default"
    android:layout_marginRight="@dimen/margin_default"
    android:layout_marginLeft="@dimen/margin_default">

    <ImageView
        android:id="@+id/comicImage"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_100"
        android:scaleType="fitCenter"
        android:contentDescription="@string/comic_image_description"
        android:src="@drawable/spider_man_cover"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/comicTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_marginLeft="@dimen/margin_default"
        android:layout_marginTop="@dimen/margin_default"
        android:layout_marginEnd="@dimen/margin_default"
        android:layout_marginRight="@dimen/margin_default"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/comic_name"
        android:textAppearance="@style/AppTheme.TitleText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/comicImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/comicDescription"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_marginLeft="@dimen/margin_default"
        android:layout_marginEnd="@dimen/margin_default"
        android:layout_marginRight="@dimen/margin_default"
        android:layout_marginBottom="@dimen/margin_default"
        android:text="@string/comic_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/comicImage"
        app:layout_constraintTop_toBottomOf="@+id/comicTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>
