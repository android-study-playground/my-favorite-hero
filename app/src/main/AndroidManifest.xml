<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.br.myfavoritehero">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".base.AppMyFavoriteHero"
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/FavoriteHeroBase"
        tools:ignore="GoogleAppIndexingWarning" >
        <activity
            android:name=".features.bottomNavigation.BottomNavigationActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".features.heroDetails.DetailHeroActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".features.listCharacter.ListHeroesActivity"
            android:theme="@style/AppTheme.NoActionBar" />

    </application>

</manifest>